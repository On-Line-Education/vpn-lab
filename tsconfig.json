{
    "compilerOptions": {
        // project options
        "lib": ["ESNext", "dom"],
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "declaration": false,
        "outDir": "dist/",
        "esModuleInterop": true
    },
    "include": [
        "client/**/*.ts",
        "client/**/*.tsx",
        "server/**/*.ts",
        "client/**/*.vue"
    ],
    "exclude": ["node_modules", "prisma", "dist"]
}
